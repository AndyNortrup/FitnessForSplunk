<dashboard script="submit_credentials.js">
  <label>Configure OAuth Credentials</label>
  <row>
    <panel>
      <html>
        <form>
          <table>
            <tr>
              <td>Google Client ID:</td><td> <input type="text" id="google_client_id"/></td>
            </tr>
            <tr>
              <td>Google Client Secret:</td><td><input type="text" id="google_client_secret"/></td>
            </tr>
            <tr>
              <td>FitBit Client ID:</td><td> <input type="text" id="fitbit_client_id"/></td>
            </tr>
            <tr>
              <td>FitBit Client Secret:</td><td> <input type="text" id="fitbit_client_secret"/></td>
            </tr>
          </table>
          <input type="button" id="btn-submit" value="Submit"/>
        </form>
      </html>
    </panel>
  </row>
</dashboard>
